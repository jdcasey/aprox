  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
      <resource>
        <directory>src/main/data</directory>
        <filtering>true</filtering>
        <targetPath>../data</targetPath>
      </resource>
      <resource>
        <directory>src/main/etc</directory>
        <filtering>true</filtering>
        <targetPath>../etc</targetPath>
      </resource>
    </resources>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <executions>
            <execution>
              <id>unpack-swagger-test</id>
              <phase>process-resources</phase>
              <goals>
                <goal>unpack-dependencies</goal>
              </goals>
              <configuration>
                <includeArtifactIds>indy-rest-generator</includeArtifactIds>
                <outputDirectory>${project.build.testOutputDirectory}</outputDirectory>
              </configuration>
            </execution>
            <execution>
              <id>unpack-dist-base</id>
              <phase>process-resources</phase>
              <goals>
                <goal>unpack-dependencies</goal>
              </goals>
              <configuration>
                <includeArtifactIds>indy-dist-base</includeArtifactIds>
                <outputDirectory>${project.build.directory}/dist-base</outputDirectory>
              </configuration>
            </execution>
            <execution>
              <id>unpack-uberjar</id>
              <phase>generate-resources</phase>
              <goals>
                <goal>unpack-dependencies</goal>
              </goals>
              <configuration>
                <includeScope>compile</includeScope>
                <includeTypes>jar</includeTypes>
                <includeGroupIds>
                  org.commonjava.indy,
                  org.commonjava.indy.boot,
                  org.commonjava.indy.rest,
                  org.commonjava.util,
                  org.commonjava.cdi.util,
                  org.commonjava.web,
                  org.commonjava.rwx,
                  org.commonjava.auditquery,
                  org.commonjava.maven.galley,
                  org.commonjava.atlas,
                  org.commonjava.propulsor
                </includeGroupIds>

                <excludeArtifactIds>indy-rest-generator,indy-ui-layover,indy-dist-base</excludeArtifactIds>
                <excludedClassifiers>confset,dataset,uiset,reactui</excludedClassifiers>

                <outputDirectory>${project.build.outputDirectory}</outputDirectory>
              </configuration>
            </execution>
          </executions>
        </plugin>
